{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    //"skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictNullChecks": false, // amCharts 4 currently has partial support for TypeScript's strict mode.
    "strictFunctionTypes": false, // amCharts 4 currently has partial support for TypeScript's strict mode.
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "src/common/formatBoundaryTSDatats"
  ],
  "exclude": ["node_modules"]
}
